.playsong {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: black;
}

.logimg {
  width: 100%;
  height: 800rpx;
}

.playimg {
  width: 300rpx;
  height: 300rpx;
  border: 80rpx solid #333333;
  border-radius: 50%;
  /* margin: 0 auto; */
  animation: circle 8s linear infinite;
  /* animation-play-state: ; */
}

@keyframes circle {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.pauseimg {
  width: 80rpx;
  height: 80rpx;
  /* border: 1rpx solid red; */
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
}

.colorred {
  color: red;
  font-weight: bold;
}

.slider {
  width: 70%;
  height: 50rpx;
  margin-top: 40rpx;
}

.popup {
  bottom: 50rpx !important;
  left: 50% !important;
  transform: translateX(-50%);
  border-radius: 50rpx !important;
  padding: 20rpx;
}